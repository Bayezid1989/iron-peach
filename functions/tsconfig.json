{
  "compilerOptions": {
    "module": "NodeNext",
    "skipLibCheck": true, // This is for drizzle d.ts errors when deploying
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": ["src"],
}
